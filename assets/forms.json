{
  "CASES": [
    {
      "title": "Patient Info",
      "layout": "grid",
      "fields": [
        {
          "id": "start_age",
          "label": "Start Age",
          "type": "number",
          "validation": { "required": true, "min": 0, "maxLength": 4 }
        },
        {
          "id": "end_age",
          "label": "End Age",
          "type": "number",
          "validation": {
            "required": true,
            "greaterThanField": "start_age"
          }
        },
        {
          "id": "male",
          "label": "Male",
          "type": "number"
        },
        {
          "id": "female",
          "label": "Female",
          "type": "number"
        },
        {
          "id": "total",
          "label": "Total",
          "type": "number",
          "validation": {
            "formula": "male + female == total",
            "errorMessage": "Total must equal Male + Female"
          }
        }
      ]
    }
  ]
}
