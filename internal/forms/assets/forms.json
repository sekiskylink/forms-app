{
  "version": "2025.10.23",
  "forms": {
    "CASES": {
      "meta": {
        "name": "Cases Form",
        "description": "Weekly reporting of suspected and confirmed disease cases.",
        "icon": "cases.png"
      },
      "sections": [
        {
          "title": "General Information",
          "layout": "grid",
          "columns": 2,
          "fields": [
            {
              "id": "facility_name",
              "label": "Health Facility Name",
              "type": "text",
              "validation": { "required": true, "maxLength": 100 }
            },
            {
              "id": "district",
              "label": "District",
              "type": "text",
              "validation": { "required": true }
            },
            {
              "id": "date",
              "label": "Date of Report",
              "type": "date",
              "validation": { "required": true }
            }
          ]
        },
        {
          "title": "Case Details",
          "layout": "grid",
          "columns": 2,
          "fields": [
            {
              "id": "measles_cases",
              "label": "Number of Measles Cases",
              "type": "number",
              "validation": { "required": true, "min": 0 }
            },
            {
              "id": "cholera_cases",
              "label": "Number of Cholera Cases",
              "type": "number",
              "validation": { "required": true, "min": 0 }
            },
            {
              "id": "other_disease",
              "label": "Other Disease (Specify)",
              "type": "text",
              "validation": { "required": false, "maxLength": 50 }
            }
          ]
        }
      ]
    },

    "DEATH": {
      "meta": {
        "name": "Death Form",
        "description": "Weekly reporting of deaths by cause and age group.",
        "icon": "death.png"
      },
      "sections": [
        {
          "title": "Mortality Summary",
          "layout": "grid",
          "columns": 2,
          "fields": [
            {
              "id": "district",
              "label": "District",
              "type": "text",
              "validation": { "required": true }
            },
            {
              "id": "week_start",
              "label": "Week Start Date",
              "type": "date",
              "validation": { "required": true }
            },
            {
              "id": "total_deaths",
              "label": "Total Deaths",
              "type": "number",
              "validation": { "required": true, "min": 0 }
            }
          ]
        },
        {
          "title": "Deaths by Age Group",
          "layout": "grid",
          "columns": 3,
          "fields": [
            {
              "id": "deaths_under5",
              "label": "Under 5",
              "type": "number",
              "validation": { "min": 0 }
            },
            {
              "id": "deaths_5to14",
              "label": "Ages 5â€“14",
              "type": "number",
              "validation": { "min": 0 }
            },
            {
              "id": "deaths_15plus",
              "label": "Ages 15+",
              "type": "number",
              "validation": { "min": 0 }
            }
          ]
        }
      ]
    },

    "TB": {
      "meta": {
        "name": "Tuberculosis Form",
        "description": "Quarterly TB case management and follow-up reporting.",
        "icon": "tb.png"
      },
      "sections": [
        {
          "title": "Patient Information",
          "layout": "grid",
          "columns": 2,
          "fields": [
            {
              "id": "patient_id",
              "label": "Patient ID",
              "type": "text",
              "validation": { "required": true }
            },
            {
              "id": "sex",
              "label": "Sex",
              "type": "select",
              "options": ["Male", "Female"],
              "validation": { "required": true }
            },
            {
              "id": "age",
              "label": "Age",
              "type": "number",
              "validation": { "required": true, "min": 0, "max": 120 }
            }
          ]
        },
        {
          "title": "Treatment Follow-up",
          "layout": "grid",
          "columns": 2,
          "fields": [
            {
              "id": "start_date",
              "label": "Treatment Start Date",
              "type": "date",
              "validation": { "required": true }
            },
            {
              "id": "end_date",
              "label": "Treatment End Date",
              "type": "date",
              "validation": { "afterField": "start_date" }
            },
            {
              "id": "treatment_outcome",
              "label": "Treatment Outcome",
              "type": "select",
              "options": ["Cured", "Completed", "Died", "Lost to follow-up", "Ongoing"],
              "validation": { "required": true }
            }
          ]
        }
      ]
    }
  }
}
